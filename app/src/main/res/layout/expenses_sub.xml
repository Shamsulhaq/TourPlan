<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sam.tourplan.ShowExpensesActivity"
    tools:showIn="@layout/activity_show_expenses">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@drawable/button_backgroundfx"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:id="@+id/budgetETEx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Budget Amount :"
            android:textSize="20dp"
            android:textColor="#161616"
            />
        <TextView
            android:id="@+id/totalexpensesETEx"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Expenses :"
            android:textColor="#161616"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/summeryETEx"
            android:textColor="#161616"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summery :"
            android:textSize="20dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/myExpensesList"
        android:padding="15dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

    </ListView>
    <TextView
        android:id="@+id/nodatExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ed1212"
        android:textSize="25dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>