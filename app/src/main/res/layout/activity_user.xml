<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
    android:background="@drawable/backgroundtwo"
        tools:context="com.example.sam.tourplan.UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/button_backgroundfx"
        android:padding="5dp">
    <TextView
        android:paddingTop="10dp"
        android:id="@+id/usernameAU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="User Name"
        android:textColor="#fff"
        android:gravity="center"
        android:paddingBottom="10dp"/>
    <TextView
        android:textColor="#fff"

        android:paddingBottom="10dp"
        android:id="@+id/useremailAU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="User Email"
        android:gravity="center"
        android:autoLink="email"/>
    <TextView
        android:textColor="#fff"

        android:paddingBottom="10dp"
        android:id="@+id/userphoneAU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="User Phone"
        android:autoLink="phone"
        android:gravity="center"/>

    <TextView
        android:textColor="#fff"

        android:paddingBottom="10dp"
        android:id="@+id/userpassAU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="User Password"
        android:gravity="center"/>

    <TextView
        android:textColor="#fff"

        android:paddingBottom="10dp"
        android:id="@+id/useremergencyAU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Emergency Number"
        android:gravity="center"
        android:autoLink="phone"/>

    <TextView
        android:textColor="#fff"

        android:paddingBottom="10dp"
        android:id="@+id/useraddressAU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="User Address"
        android:gravity="center"
        android:autoLink="map"/>
    </LinearLayout>
    <Button
        android:onClick="backToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back To Home"
        android:textAllCaps="false"/>
    <Button
        android:onClick="logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textAllCaps="false"/>




    </LinearLayout>